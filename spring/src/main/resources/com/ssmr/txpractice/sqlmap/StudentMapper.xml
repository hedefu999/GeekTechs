<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmr.txpractice.mapper.StudentMapper">
    <resultMap id="base_result_map" type="com.ssmr.txpractice.Student">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
    <insert id="insertStudent">
        insert into student(name, level) values
        (#{name},#{level})
    </insert>
    <update id="updateStudent">
        update student
        <set>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="level != null">
                level = #{level}
            </if>
        </set>
    </update>
    <delete id="deleteStudent">
        delete from student
        where id = #{id}
    </delete>
    <select id="selectStudent" resultType="com.ssmr.txpractice.Student">
        select id,name,level
        from student
        where id = #{id}
    </select>


</mapper>