    <!--<mapper class="com.hedefu.mybatis.mapper.UserInfoMapper"/>-->
    
    <!--直接规范地设置mapper.xml存储路径-->
    <package name="com.hedefu.mybatis.mapper"/>
  </mappers>
  
</configuration>